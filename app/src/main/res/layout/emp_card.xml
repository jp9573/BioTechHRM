<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employee_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employee Detail"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:id="@+id/textView" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="true"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/imageView"
                android:paddingLeft="10dp"
                android:text="Name :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/name_label"
                android:layout_alignBottom="@+id/name_label"
                android:layout_toEndOf="@+id/name_label"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/instute_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/name_label"
                android:layout_marginStart="58dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/name_field"
                android:text="Institute ID :" />

            <TextView
                android:id="@+id/institute_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/instute_label"
                android:layout_alignBottom="@+id/instute_label"
                android:layout_toEndOf="@+id/instute_label"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/specialization_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/instute_label"
                android:layout_below="@+id/instute_label"
                android:layout_marginTop="3dp"
                android:text="Specialization :" />

            android:text="Spec1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/specialzation_field"
            android:layout_alignBaseline="@+id/specialization_label"
            android:layout_alignBottom="@+id/specialization_label"
            android:layout_toEndOf="@+id/specialization_label"
            android:textStyle="normal|bold"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/dob_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB :"
                android:layout_below="@+id/specialization_label"
                android:layout_alignStart="@+id/specialization_label" />

            <TextView
                android:id="@+id/dob_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dob_label"
                android:layout_alignBottom="@+id/dob_label"
                android:layout_toEndOf="@+id/dob_label"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/retirement_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dob_field"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/dob_field"
                android:paddingLeft="10dp"
                android:text="Retirement :" />

                android:id="@+id/retirement_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/retirement_label"
                android:layout_alignBottom="@+id/retirement_label"
                android:layout_toEndOf="@+id/retirement_label"
                android:paddingLeft="5dp"
                android:text="2018"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:textStyle="normal|bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
